<% include ./partials/header %>
	<div class="container">
		<div class="container">
			<h1 style="text-align:center">Add new comment to <%=hotel.name%></h1>
			<div style="width:30%; margin:30px auto">
			<form action="/hotels/<%=hotel._id%>/comments" method="POST">
				<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" placeholder="comment text">	
				</div>
				<div class="form-group">
				<input type="text" class="form-control" name="comment[author]" placeholder="author">	
				</div>
				<div class="form-group">
					<button class=" btn btn-large btn-primary
					btn-block" type="submit">Submit!</button>
				</div>
			</form>
			<a href="/hotels">Go back</a>
			</div>
			
		</div>
	</div>
<% include ./partials/footer %>